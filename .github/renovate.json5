{
    extends: [
        'config:best-practices',
        ':automergeMinor',
        ':automergePr',
        ':disableRateLimiting',
        ':docker',
    ],
    platform: 'github',
    autodiscover: false,
    dryRun: null,
    printConfig: false,
    dependencyDashboardAutoclose: true,
    automerge: true,
    platformAutomerge: true,
    baseBranches: [
        'master',
    ],
    ignoreTests: true,
    includePaths: [
        '.github/renovate.json5',
        '.github/workflows/**',
        'apps/**',
    ],
    customManagers: [
        {
            customType: 'regex',
            description: 'Update pinned metadata versions',
            fileMatch: [
                '(^|/)metadata\\.yaml$',
            ],
            matchStrings: [
                'renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sversion: (?<currentValue>.*)\\s',
            ],
        },
    ],
}
